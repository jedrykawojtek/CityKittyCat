<div class="cat-register">
    <h1>Cat registration form:</h1>
    <form method="POST" action="/cats">
        <div class="form-group">
            <div class="row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="name" placeholder="Cat Name">
                </div>
                <div class="form-group col-md-4">
                    <input type="text"  class="form-control" name="streetName" placeholder="Street name">
                </div>
                <div class="form-group col-md-4">
                    <input type="imageUrl" class="form-control" name="imageUrl" placeholder="Cat picture">
                </div>    
            </div>
        </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <input type="number" class="form-control"  name="age" placeholder="Age">
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="gender" placeholder="Gender">
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="furColour" placeholder="Fur colour">
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" name="favouriteMusic" placeholder="Favourite music"> 
                </div>
                <div class="col">
                    <input type="text" class="form-control" name="favouriteTvShow" placeholder="Favourite TV show">
                </div>
                <div class="col">
                    <input type="text" class="form-control" name="favouriteGame" placeholder="Favourite game">
                </div>
                <div class="col">
                    <input type="text" class="form-control" name="favouriteFood" placeholder="Favourite food">
                </div>
            </div> 
        
        <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="yoga" placeholder="Cat yoga">
                        <label class="form-check-label" for="defaultCheck1">
                            Cat Yoga
                        </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="purring" placeholder="Love purring all the time">
                        <label class="form-check-label" for="defaultCheck1">
                            Purring all the time
                        </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="scratching" placeholder="Love to be scratched">
                        <label class="form-check-label" for="defaultCheck1">
                            Love to be scratched
                        </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="barber" placeholder="Your cat barber">
                    <label class="form-check-label" for="defaultCheck1">
                        Make The Cat Your Uniq Barber Stylist
                    </label>
                </div>
        </div>
        <button type="submit" class="btn btn-primary mb-2">Submit</button>
        <h6>Already have an account?   <a href="/login">Login</a></h6>
        <div class="gif-carnage">
             <img class="cat-mess" src="/images/gifs/cat_carnage_slow.gif" alt="Cat mess animation">
             {{!-- class="mw-200 h-200 d-inline-block justify-item-center"  --}}
        </div> 
          
    </form>
</div>



